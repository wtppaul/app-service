{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "src/config/types"],
    "rootDir": "./src"
  },
  "include": ["src", "cli.ts"],
  "exclude": ["node_modules", "generated"]
}
